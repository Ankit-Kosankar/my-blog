---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	heroImage?: any;
}

const { title, description, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.main-container {
				padding: 2%;
			}

			main {
				width: 80%;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 3em 1em;
			}
			
			.page-content {
				width: 100%;
				max-width: 1020px;
				margin: 0 auto;
				padding: 1em;
				color: var(--gray-dark);
			}
			
			.page-title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			
			.page-title h1 {
				margin: 0;
				font-size: 2.5rem;
				font-weight: 700;
				color: var(--gray-dark);
			}
			
			.page-description {
				text-align: center;
				color: var(--gray);
				font-size: 1.1rem;
				margin-bottom: 2rem;
			}
			
			.content-section {
				margin-bottom: 2rem;
			}
			
			.content-section p {
				font-size: 1.1rem;
				line-height: 1.7;
				margin-bottom: 1.5rem;
				color: var(--gray-dark);
			}
			
			.hero-image {
				width: 100%;
				margin-bottom: 2rem;
			}
			
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			
			@media (max-width: 720px) {
				main {
					width: 100%;
					padding: 1em;
				}
				
				.page-title h1 {
					font-size: 2rem;
				}
				
				.page-description {
					font-size: 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			{heroImage && (
				<div class="hero-image">
					<Image width={1020} height={510} src={heroImage} alt="" />
				</div>
			)}
			<div class="page-content">
				<div class="page-title">
					<h1>{title}</h1>
					<div class="page-description">
						{description}
					</div>
				</div>
				<div class="content-section">
					<slot />
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html> 
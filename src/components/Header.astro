<script>
    document.addEventListener('DOMContentLoaded', function() {
        const navLinks = document.querySelectorAll('.internal-links a');
        let currentActive = document.querySelector('.internal-links a.active');
        
        navLinks.forEach(link => {
            link.addEventListener('mouseenter', () => {
                // Remove active class from currently active link
                if (currentActive) {
                    currentActive.classList.remove('active');
                }
                // Add active class to hovered link
                link.classList.add('active');
            });
            
            link.addEventListener('mouseleave', () => {
                // Remove active class from all links
                navLinks.forEach(l => l.classList.remove('active'));
                // Restore active class to originally active link
                if (currentActive) {
                    currentActive.classList.add('active');
                }
            });
        });
    });
</script>

<style>
    header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        margin: 0;
        padding: 0.5em 3em;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    }
    h2 {
        margin: 0;
        font-size: 1em;
    }
    h2 a,
    h2 a.active {
        text-decoration: none;
        color: #4a5568;
        font-weight: 600;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    /* Enhanced Internal Links Container */
    .internal-links {
        position: relative;
        display: flex;
        background: rgba(0, 0, 0, 0.03);
        border-radius: 50px;
        padding: 0.2em;
        gap: 0.1em;
    }
    
    /* Navigation Links with Bubble Effect */
    .internal-links a {
        position: relative;
        padding: 0.8em 1.5em;
        color: #4a5568;
        text-decoration: none;
        border-radius: 50px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        z-index: 1;
        font-weight: 500;
    }
    
    /* Bubble Background Effect */
    .internal-links a::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        /* background: linear-gradient(135deg, var(--accent, #646cff) 0%, rgba(100, 108, 255, 0.8) 100%); */
		        background-color: var(--accent, #646cff);
		border-radius: 50px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        transform: translate(-50%, -50%);
        z-index: -1;
    }
    
    /* Hover Effect - Bubble Expansion */
    .internal-links a:hover::before {
        width: 100%;
        height: 100%;
    }
    
    .internal-links a:hover {
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px var(--accent, #646cff);
    }
    
    /* Active State - Permanent Bubble */
    .internal-links a.active::before {
        width: 100%;
        height: 100%;
        background: var(--accent, #646cff);
    }
    
    .internal-links a.active {
        color: white;
        /* transform: translateY(-1px); */
        box-shadow: 0 3px 10px var(--accent, #646cff);
    }
    
    /* Subtle Pulse Animation for Active Links */
    .internal-links a.active {
        animation: subtle-pulse 2s ease-in-out infinite;
    }
    
    @keyframes subtle-pulse {
        0%, 100% { 
            box-shadow: 0 3px 10px var(--accent, #646cff);
        }
        50% { 
            box-shadow: 0 3px 15px var(--accent, #646cff);
        }
    }
    
    /* Floating Animation for All Links */
    .internal-links a {
        animation: float 6s ease-in-out infinite;
    }
    
    .internal-links a:nth-child(1) { animation-delay: 0s; }
    .internal-links a:nth-child(2) { animation-delay: 2s; }
    .internal-links a:nth-child(3) { animation-delay: 4s; }
    
    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-3px); }
    }
    
    /* Remove old nav a styles and replace with title link styles */
    h2 a {
        padding: 1em 0.5em;
        color: #4a5568;
        border-bottom: 4px solid transparent;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 600;
    }
    
    h2 a:hover {
        color: var(--accent, #646cff);
        transform: scale(1.05);
    }
    
    .social-links,
    .social-links a {
        display: flex;
    }
    
    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
        
        .internal-links {
            background: transparent;
            padding: 0;
            gap: 0;
        }
        
        .internal-links a {
            padding: 0.6em 1em;
            font-size: 0.9em;
        }
    }
</style>
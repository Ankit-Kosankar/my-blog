---
interface Props {
	date: Date | undefined;
}

const { date } = Astro.props;
const isValidDate = date instanceof Date && !isNaN(date.valueOf());
---

<time datetime={isValidDate ? date.toISOString() : ''}>
	{isValidDate
		? date.toLocaleDateString('en-us', {
				year: 'numeric',
				month: 'short',
				day: 'numeric',
			})
		: 'Invalid date'}
</time>
